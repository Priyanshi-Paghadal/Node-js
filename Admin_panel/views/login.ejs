<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .nav {
            display: flex;
            justify-content: center;
            margin: 80px 0;
        }

        .nav a {
            margin: 0 10px;
            display: inline-block;
            font-size: 18px;
        }

        body {
            background-color: #dde2f7;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        input {
            width: 100%;
            border-radius: 5px;
            padding: 10px 20px;
            margin-bottom: 10px;
            border: 1px solid #e9e2e2;
            outline: none;
        }

        .main {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .inner {
            text-align: center;
            width: 700px;
            background-color: #fff;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        button {
            display: block;
            margin: 0 auto;
            background-color: #5552cc;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

        a {
            display: inline-block;
            margin-top: 18px;
            font-size: 17px;
        }

        .col-5 {
            width: 41.67%;
        }

        .col-7 {
            width: 58.33%;
        }

        .row {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-form {
            padding: 30px;
        }

        .login-img {
            border-right: 1px solid #dde2f7;
        }
    </style>
</head>

<body>
    <div class="nav">
        <a href="/authRoutes/register">Don't have an account ?</a>
    </div>
    <div class="main">
        <div class="inner">
            <div class="row">
                <div class="col-5">
                    <div class="login-img">
                        <img src="https://cdni.iconscout.com/illustration/premium/thumb/user-login-illustration-download-in-svg-png-gif-file-formats--password-profile-businessman-pack-business-illustrations-5857593.png?f=webp"
                            alt="login-img" title="login-img" width="100%">
                    </div>
                </div>
                <div class="col-7">
                    <div class="login-form">
                        <h1>Login Now</h1>
                        <form action="/login" method="POST" id="form">
                            <input type="email" id="userEmail" name="userEmail" placeholder="Enter Your Email">
                            <br> <br>
                            <input type="password" id="userPassword" name="userPassword"
                                placeholder="Enter Your Password">
                            <br> <br>
                            <button type="submit">Log In</button>
                            <a href="/authRoutes/register">Don't have an account ?</a>
                            <a href="/authRoutes/updatePassword">Update Password ?</a>
                            <a href="/authRoutes/generateOTP">Forgot Password ?</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const form = document.querySelector("#form");
        form.addEventListener("submit", (e) => {
            e.preventDefault();
            const userEmail = document.querySelector("#userEmail").value;
            const userPassword = document.querySelector("#userPassword").value;

            fetch("/authRoutes/login", {
                method: "POST",
                body: JSON.stringify({ userEmail, userPassword }),
                headers: {
                    "Content-Type": "application/json; charset=UTF-8",
                }
            })
                .then((res) => res.json())
                .then((data) => {
                    console.log(data)
                    if (data.success) {
                        window.location.href = "/authRoutes/userHome"
                    }
                    else {
                        res.status(400).json({ msg: "Something went wrong..." });
                    }
                })
                .catch((error) => console.log(error))

            document.querySelector("#userEmail").value = "";
            document.querySelector("#userPassword").value = "";
        })
    </script>
</body>

</html>