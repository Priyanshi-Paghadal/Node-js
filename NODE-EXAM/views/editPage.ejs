<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .main {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .nav {
            margin: 50px 0;
            display: flex;
            justify-content: center;
        }

        .nav a {
            margin: 0 10px;
        }

        input {
            padding: 10px 20px;
            width: 100%;
        }

        label {
            margin-bottom: 10px;
            display: inline-block;
        }

        button {
            width: 100%;
            background-color: green;
            color: white;
            border-radius: 7px;
            padding: 10px;
            border: none;
            margin-bottom: 10px;
        }

        .inner {
            width: 500px;
        }

        a {
            display: flex;
            justify-content: center;
        }
        h1{
            margin: 20px auto;
        }
    </style>
</head>

<body>
    <div class="nav">
        <a href="/pro/home">View Product</a>
        <a href="/pro/formData">Add Product</a>
        <a href="/auth/registerData">Register</a>
        <a href="/auth/loginData">Login</a>
    </div>
    <div class="main">
        <div class="inner">
            <h1>Update Your Product</h1>
            <form action="/pro/edit/<%= data._id %>" id="form">
                <input type="hidden" id="id" value="<%= data._id %>">
                <label>Product Name : </label>
                <br>
                <input type="text" id="productName" value="<%= data.productName %>">
                <br> <br>
                <label>Product Price : </label>
                <br>
                <input type="number" id="productPrice" value="<%= data.productPrice %>">
                <br> <br>
                <label>Product Quantity : </label>
                <br>
                <input type="number" id="productQuantity" value="<%= data.productQuantity %>">
                <br> <br>
                <label>Product Discription : </label>
                <br>
                <input type="text" id="discription" value="<%= data.discription %>">
                <br> <br>
                <button>Save Changes</button>
            </form>

        </div>
    </div>
    <script>
        let form = document.querySelector("#form");
        form.addEventListener("submit", (e) => {
            e.preventDefault();
            let id = document.querySelector("#id").value;
            let productName = document.querySelector("#productName").value;
            let productPrice = document.querySelector("#productPrice").value;
            let productQuantity = document.querySelector("#productQuantity").value;
            let discription = document.querySelector("#discription").value;

            fetch(`/pro/edit/${id}`, {
                method: "PATCH",
                body: JSON.stringify({ productName, productPrice, productQuantity, discription }),
                headers: {
                    "content-type": "application/json; charset=UTF-8"
                }
            })
                .then((res) => res.json())
                .then((data) => {
                    console.log(data)
                    if(data.success){
                        window.location.href ="/pro/home";
                    }
                })
                .catch((error) => console.log(error))

            document.querySelector("#productName").value = "";
            document.querySelector("#productPrice").value = "";
            document.querySelector("#productQuantity").value = "";
            document.querySelector("#discription").value = "";
        })
    </script>
</body>

</html>